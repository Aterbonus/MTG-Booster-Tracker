{
	"extends": ["eslint:recommended", "@nuxtjs/eslint-config-typescript", "plugin:vue/vue3-recommended", "plugin:prettier/recommended"],
	"rules": {
		"eqeqeq": "error",
		"no-console": "warn",
		"no-tabs": "off",
		"indent": "off",
		"prettier/prettier": "error",
		"vue/multi-word-component-names": "off",
		"vue/html-self-closing": ["error", {
			"html": {
				"void": "any",
				"normal": "always",
				"component": "always"
			},
			"svg": "always",
			"math": "always"
		}]
	},
	"ignorePatterns": ["node_modules", "build", "dist", "public", ".nuxt", ".output"]
}
